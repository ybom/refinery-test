<ul>
  <% if ::Refinery::Faqs::Admin::FaqsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.faqs_admin_faqs_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_faqs_admin_faq_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Faqs::Admin::FaqsController.sortable? && ::Refinery::Faqs::Faq.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.faqs_admin_faqs_path,
                     t('.reorder', what:  "Faqs"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.faqs_admin_faqs_path,
                      t('.reorder_done', what: "Faqs"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
