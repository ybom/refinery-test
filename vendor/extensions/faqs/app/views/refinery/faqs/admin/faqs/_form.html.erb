<%= form_for [refinery, :faqs_admin, @faq] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @faq,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :id -%>
    <%= f.text_field :id, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:question, :answer],
                :object => "faqs/faq" -%>
  </div>

  <div class='field'>
    <%= f.label :category -%>
    <%= f.text_field :category -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.faqs.admin.faqs.faq'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @faq.category) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
