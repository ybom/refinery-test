<% content_for :body_content_title do %>
  <%= @faq.category %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Question</h1>
    <p>
      <%=raw @faq.question %>
    </p>
  </section>
  <section>
    <h1>Answer</h1>
    <p>
      <%=raw @faq.answer %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="faqs">
      <% @faqs.each do |faq| %>
        <li>
          <%= link_to faq.question, refinery.faqs_faq_path(faq) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
