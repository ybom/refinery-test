<ul>
  <% if ::Refinery::Entitlements::Admin::EntitlementsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.entitlements_admin_entitlements_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_entitlements_admin_entitlement_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Entitlements::Admin::EntitlementsController.sortable? && ::Refinery::Entitlements::Entitlement.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.entitlements_admin_entitlements_path,
                     t('.reorder', what:  "Entitlements"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.entitlements_admin_entitlements_path,
                      t('.reorder_done', what: "Entitlements"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
