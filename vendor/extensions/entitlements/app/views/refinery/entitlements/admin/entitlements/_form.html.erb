<%= form_for [refinery, :entitlements_admin, @entitlement] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @entitlement,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :rank -%>
    <%= f.text_field :rank, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :total_weight_self -%>
    <%= f.text_field :total_weight_self -%>
  </div>

  <div class='field'>
    <%= f.label :total_weight_self_plus_dependents -%>
    <%= f.text_field :total_weight_self_plus_dependents -%>
  </div>

  <div class='field'>
    <%= f.label :pro_gear_weight -%>
    <%= f.text_field :pro_gear_weight -%>
  </div>

  <div class='field'>
    <%= f.label :pro_gear_weight_spouse -%>
    <%= f.text_field :pro_gear_weight_spouse -%>
  </div>

  <div class='field'>
    <%= f.label :slug -%>
    <%= f.text_field :slug -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.entitlements.admin.entitlements.entitlement'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @entitlement.rank) -%>
<% end -%>
